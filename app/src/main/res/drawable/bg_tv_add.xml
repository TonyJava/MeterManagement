<!--按下-->
<item android:state_pressed="true">

    <shape
        android:shape="oval"
        android:useLevel="false">
        <solid android:color="@color/shen_blue"/>
        <size android:width="30dp"
              android:height="30dp"/>


    </shape>
</item>

</selector>